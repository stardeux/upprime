<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:windowBackground">@color/window_background</item>

        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.PrimarySurface</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="FicheSectionTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="NumberPickerCustomText">
        <item name="android:textSize">22sp</item> // add if you want to change size
    </style>

</resources>
